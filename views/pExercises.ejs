<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Picked Exercises</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/own/basic.css">
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>

<body>
    <h1>Selected Exercises</h1>
    <!-- Erstellt für jede ausgewählte Übung ein eigenes Akkordeon und Ausfüll vorm.  -->
    <% for(let i=0 ; i < nameArray.length ; i++) {%>
        <div class=" accordion-item">
            <h2 class="accordion-header" id="flush-headingOne<%= i %>">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#flush-collapseOne<%=i %>" aria-expanded="false"
                    aria-controls="flush-collapseOne<%=i %>">
                    <%= nameArray[i]%>
                </button>
            </h2>
            <div id="flush-collapseOne<%= i %>" class="accordion-collapse collapse"
                aria-labelledby="flush-headingOne<%= i %>" data-bs-parent="#accordionFlushExample">
                <div class="accordion-body">
                    <!-- //Daten ab hier werden selbstständig geöffnet// -->
                    <div class="styleWeight">
                        <table class="tabel-content">
                            <thead>
                                <tr>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="tr-First">
                                    <td>
                                        Sets
                                    </td>
                                    <td>
                                        Weight
                                    </td>
                                    <td>
                                        Repetitions
                                    </td>
                                </tr>
                                <% if (typeof data !=='0' && data.length> 0) {
                                    for(let r=0 ; r < data[i].length ; r++) {%>
                                        <tr>
                                            <td>
                                                <%= data[i][r].exerciseSet %>. Set
                                            </td>
                                            <td>
                                                <%= data[i][r].exerciseWeight %> kg
                                            </td>
                                            <td>
                                                x <%= data[i][r].exerciseRep %>
                                            </td>
                                        </tr>
                                        <% }} %>
                            </tbody>
                        </table>
                    </div>
                    <div id="Set1">
                        <input type="number" class="form-control" aria-label="" placeholder="Weight" required>

                        <input type="number" class="form-control" aria-label="" placeholder="Number of Repetitions"
                            required>

                        <button type="button " class="saveSetButton buttonAll">Save</button>

                    </div>
                    <div id="Set2">
                        <input type="number" class="form-control" aria-label="" placeholder="Weight" required>
                        <input type="number" class="form-control" aria-label="" placeholder="Number of Repetitions"
                            required>

                        <button type="button" class="saveSetButton buttonAll">Save</button>
                    </div>
                    <div id="Set3">
                        <input type="number" class="form-control" placeholder="Weight" required>
                        <input type="number" class="form-control" placeholder="Number of Repetitions" required>

                        <button type="button" class="saveSetButton buttonAll">Save</button>
                    </div>

                    <button class="buttonAll addOneSet">Additional Set</button>

                </div>
            </div>
        </div>


        <% } %>
            <script src="/js/app.js"></script>
            <script>

                const inputs = document.querySelectorAll('input')
                for (el of inputs) {
                    let set = el.parentElement.id;
                    let name = el.parentElement.parentElement.parentElement.parentElement.children[0].innerText
                    console.log(set, name, window.sessionStorage.getItem("disable" + name + set))
                    if (window.sessionStorage.getItem("disable" + name + set) === "true") {
                        console.log("if is true")
                        el.disabled = true;
                    }

                }



            </script>
</body>